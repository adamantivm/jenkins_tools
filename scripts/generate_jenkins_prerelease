#!/usr/bin/env python

import sys
import jenkins
import urllib
import yaml
import subprocess
import optparse
import os
from rospkg import environment
import jenkins_tools

ubuntu_distro = {'fuerte': ['precise'],
                 'groovy': ['precise']}
arch = ['amd64', 'i386']


# Schedule all devel jobs on Jenkins
def main():
    parser = optparse.OptionParser()
    (options, args) = parser.parse_args()

    if len(args) <= 1:
        print "Usage: %s ros_distro [distribution]"%(sys.argv[0])
        sys.exit(0)
    ros_distro = args[0]
    repositories = args[1:]
    name = '-'.join(repositories)
    if len(name) > 30:
        name = name[:28]+"..."
    
    # create jenkins instance 
    with open(os.path.join(environment.get_ros_home(), 'catkin-debs', 'server.yaml')) as f:
        info = yaml.load(f)
    jenkins_instance = jenkins.Jenkins('http://50.28.61.61:8080/', info['username'], info['password'])

    # create all jobs
    for u in ubuntu_distro[ros_distro]:
        for a in arch:
            job_name = jenkins_tools.run_jenkins_now(jenkins_instance, u, a, ros_distro+'-'+name, 'wim@hidof.com', 
                                                     'prerelease', [ros_distro]+repositories+['--depends-on'], info['username'])
            jenkins_instance.build_job(job_name)

if __name__ == "__main__":
    main()
